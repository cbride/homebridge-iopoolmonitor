{
  "pluginAlias": "HomebridgeIopool2",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "iopool"
      },
      "token": {
        "title": "Token",
        "type": "string",
        "required": true,
        "placeholder": "Your iopool token",
        "description": "You can find your token in the iopool app."
      },
      "delay": {
        "title": "Refresh Delay (in min)",
        "type": "number",
        "required": true,
        "default": 15,
        "minimum": 5,
        "maximum": 60
      },
      "PhMinWarn": {
        "title": "pH Minimum Warning Level",
        "type": "number",
        "required": true,
        "default": 7.1,
        "minimum": 5.0,
        "maximum": 10.0
      },
      "PhMinAlert": {
        "title": "pH Minimum Alert Level",
        "type": "number",
        "required": true,
        "default": 6.8,
        "minimum": 5.0,
        "maximum": 10.0
      },
      "PhMaxWarn": {
        "title": "pH Maximum Warning Level",
        "type": "number",
        "required": true,
        "default": 7.7,
        "minimum": 5.0,
        "maximum": 10.0
      },
      "PhMaxAlert": {
        "title": "pH Maximum Alert Level",
        "type": "number",
        "required": true,
        "default": 8.1,
        "minimum": 5.0,
        "maximum": 10.0
      },
      "OrpMinWarn": {
        "title": "Orp Minimum Warning Level",
        "type": "number",
        "required": true,
        "default": 650,
        "minimum": 100,
        "maximum": 2000
      },
      "OrpMinAlert": {
        "title": "Orp Minimum Alert Level",
        "type": "number",
        "required": true,
        "default": 550,
        "minimum": 100,
        "maximum": 2000
      },
      "OrpMaxWarn": {
        "title": "Orp Maximum Warning Level",
        "type": "number",
        "required": true,
        "default": 800,
        "minimum": 100,
        "maximum": 2000
      },
      "OrpMaxAlert": {
        "title": "Orp Maximum Alert Level",
        "type": "number",
        "required": true,
        "default": 1000,
        "minimum": 100,
        "maximum": 2000
      }
    }
  }
}